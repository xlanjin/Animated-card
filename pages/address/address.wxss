/**address.wxss**/
/**optional**/
@import "../../common.wxss";
@import "../../components/switch.wxss";
page {
  background: #F2F2F6;
  
}
.block-bg{
  padding: 25rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.buy_flower_detail {
  display: flex;
  position: relative;
 
}
.buy_flower_detair_photo_wrap {
  width: 108rpx;
  height: 120rpx;
  box-shadow: -5px 1px 15px 1px #ccc;
}

.block_title {
  font-size: 28rpx;
  line-height: 55rpx;
}
.block_title_tip {
  font-size: 22rpx;
  line-height: 28rpx;
  margin-top:10rpx;
  color:#999;
}

.flower_price {
  position: absolute;
  right: 18rpx;
  top: 66rpx;
  color: #00c9a9;
  font-size: 32rpx;
  line-height: 44rpx;
}

.buy_flower_detair_photo_wrap image {
  width: 100%;
  height: 100%;
}
.flower_detail {
  font-size: 24rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.buy_flower_detail_tip {
  margin-left: 13px;
  width: 480rpx;
}

.btn-pay {
  width: 100%;
  height: 44rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 20rpx;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
}
.box {
  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  background-color: #00c9a9;
  margin-right:10rpx;
  line-height: 40rpx;
  display: inline-block;
}

.data-select {
  border-bottom: 1px solid #c0c2ce;
  flex-grow: 1;
}

.data-select picker {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #c0c2ce;
  display: inline-block;
}

.data-select-item {
  width: 33.33%;
  padding-left: 20rpx;
  display: flex;
}

.address_input {
  margin-bottom: 25rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}

.address_input input,.address_input picker {
  border-bottom: 1px solid #c0c2ce;
}

.address_text {
  margin-top: 30rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}

.address_text checkbox {
  color: #4a4a4a;
}

.address_textarea {
  border: 1px solid #c0c2ce;
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
}

.address_wrap {
  display: flex;
}
.wrap_item {
  flex-grow: 1;
  display:block;
  height:1.4rem;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  font-family:UICTFontTextStyleBody;
  min-height:1.4rem;
  line-height:1.4rem;
  margin-right: 10rpx;
}